<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Adoptions.</h1>


      <table>
        <tr>
          <th>Adoptions Completed</th>
          <th></th>
        </tr>
        <% for adoption in @adoptions %>
        <tr>
          <td><a href="/adoptions/<%= adoption.id %>"><%=
          adoption.owner.name %> adopted <%= adoption.pet.name
          %></a></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">

      <form method="get" action="/adoptions/new">
        <input type="submit" value="New Adoption"/>
      </form>

    </div>
  </div>
</div>
