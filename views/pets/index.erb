<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Pets.</h1>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Type</th>
            <th>Breed</th>
            <th>Admission Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% for pet in @pets %>
          <tr>
            <td><a href="/pets/<%= pet.id %>"><%= pet.name %></a></td>
            <td><%= pet.age %></td>
            <td><%= pet.type %></td>
            <td><%= pet.breed %></td>
            <td><%= pet.admission_date %></td>
            <td><%= pet.status%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-sm">

      <form
      method="get" action="/pets/new">
      <div class="form-group">
        <input class="btn btn-secondary btn-block" type="submit" value="Add Pet"/>
      </div>
    </form>
  </div>
</div>

<div class="row mt-5">

  <div class="col-sm">
    <form method="post" action="/pets/search">
      <div class="form-group">
        <label for= "breed-select">
          Find a Breed:</label>
          <select class="form-control"
          id="breed-select" name="breed">
          <% for pet in @distinct_breed %>
          <option value="<%= pet.breed %>">
            <%= pet.breed %>
          </option>
          <%end%>
        </select>
      </div>
      <div class="form-group">
        <input class="btn btn-secondary btn-block" type="submit" value="Breed">
      </div>
    </form>
  </div>

  <div class="col-sm">
    <form method="post" action="/pets/type_search">
      <div class="form-group">
        <label for= "type-select">
          Find a Type:</label>
          <select class="form-control"
          id="type-select" name="type">
          <% for pet in @distinct_type %>
          <option value="<%= pet.type %>">
            <%= pet.type %>
          </option>
          <%end%>
        </select>
      </div>
      <div class="form-group">
        <input class="btn btn-secondary btn-block" type="submit" value="Type">
      </div>
    </form>
  </div>

  <div class="col-sm">
    <form method="post" action="/pets/status_search">
      <div class="form-group">
        <label for= "status-select">
          Find a Friend By Status:</label>
          <select class="form-control"
          id="status-select" name="status">
          <% for pet in @distinct_status %>
          <option value="<%= pet.status %>">
            <%= pet.status %>
          </option>
          <%end%>
        </select>
      </div>
      <div class="form-group">
        <input class="btn btn-secondary btn-block" type="submit" value="Status">
      </div>
    </form>
  </div>
</div>
</div>
