<h1>Pets</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Age</th>
    <th>Type</th>
    <th>Breed</th>
    <th>Admission Date</th>
    <th>Status</th>
  </tr>
  <% for pet in @pets %>
  <tr>
    <td><a href="/pets/<%= pet.id %>"><%= pet.name %></a></td>
    <td>|</td>
    <td><%= pet.age %></td>
    <td><%= pet.type %></td>
    <td><%= pet.breed %></td>
    <td><%= pet.admission_date %></td>
    <td><%= pet.status%></td>
  </tr>
  <% end %>
</table>

<form method="post" action="/pets/breed_search">
<label for= "breed-select">
  Find a Breed:</label>
  <select id="breed-select" name="breed">
    <% for pet in @distinct_breed %>
    <option value="<%= pet.breed %>">
      <%= pet.breed %>
    </option>
    <%end%>
  </select>
  <input type="submit" value="Breed">
</form>

<form method="post" action="/pets/type_search">
<label for= "type-select">
  Find a Type:</label>
  <select id="type-select" name="type">
    <% for pet in @distinct_type %>
    <option value="<%= pet.type %>">
      <%= pet.type %>
    </option>
    <%end%>
  </select>
  <input type="submit" value="Type">
</form>
